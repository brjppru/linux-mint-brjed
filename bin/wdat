#!/bin/sh

export LC_ALL=C

# Show date and time in other time zones

dator() {

zoneinfo=/usr/share/zoneinfo/posix/

format='%a %F %T'

find -L $zoneinfo -type f \
    | grep -i "$search" \
    | while read z
      do
          d=$(TZ=$z date +"$format")
          printf "%-34s %23s\n" ${z#$zoneinfo} "$d"
      done

}

# 

search="Moscow"; dator
search="Krasnoyarsk"; dator
search="Vladivostok"; dator

